{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testRegex": [".*\\.spec\\.ts$", ".*\\.e2e-spec\\.ts$"],
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": ["**/*.(t|j)s"],
  "coverageDirectory": "../coverage",
  "testEnvironment": "node",
  "globals": {
    "ts-jest": {
      "isolatedModules": true
    }
  },
  "setupFiles": [
    "<rootDir>/test/data/environmentVariables.ts"
  ]
}
